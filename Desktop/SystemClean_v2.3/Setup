#!/bin/bash

 #===========================================================================================#
#                                                                                             #
#                                SystemClean v2.3 04-06-2015                                  #
#                                ---------------------------                                  #
#                                                                                             #
#                                                                                             #
#                   This script created by vagrale13 (vagrale@gmail.com)                      #
#           to easy clean your system and home folder from cache and unneeded files.          #
#                                                                                             #
#                             Project page: http://goo.gl/7UXUs                               #
#                                                                                             #
 #===========================================================================================#

user=`whoami`
date=$(date +'%d'-'%b'-'%Y')
lang=$(cat /home/$user/.systemclean/config | grep "_")
file=$(test -e /home/$user/.systemclean && echo "exists")
results=$(test -e /home/$user/.systemclean/results.txt && echo "exists")
results_old=$(test -e /home/$user/.systemclean/results_old.txt && echo "exists")
exist=$(test -e /home/$user/.gnome2/nautilus-scripts/SystemClean && echo "exists")

sleep 1

if [ "$exist" = "exists" ]; then
rm -rf /home/$user/.gnome2/nautilus-scripts/SystemClean
fi

cd "$(SystemClean_v2.3 '$0')"

#------------------------------------------------------------------------#
# config file language

en="## DO NOT EDIT THIS FILE ##

Project name: SystemClean
Version: 2.3
Author: vagrale13
Project Page: <a href=http://goo.gl/7UXUs>http://goo.gl/7UXUs</a>
Language: English
Date Install: $date
en_US"

el="## Μην επεξεργαστείτε αυτό το αρχείο ##

Ονομασία: SystemClean
Έκδοση: 2.3
Δημιουργός: vagrale13
Ιστοσελίδα: <a href=http://goo.gl/7UXUs>http://goo.gl/7UXUs</a>
Γλώσσα: Ελληνικά
Ημ/νία εγκατάστασης: $date
el_GR"

es="## NO EDITE ÉSTE ARCHIVO ##

Nombre del proyecto: SystemClean
Versión: 2.3
Autor: vagrale13
Página de proyecto: <a href=http://goo.gl/7UXUs>http://goo.gl/7UXUs</a>
Idioma: Espagnol
Traductor: Fernando Bernal
Fecha de instalación: $date
es_ES"

gl="## NON EDITAR ESTE FICHEIRO ##

Nome do ficheiro: SystemClean
Versión: 2.3
Autor: vagrale13
Páxina do proxecto: <a href=http://goo.gl/7UXUs>http://goo.gl/7UXUs</a>
Idioma: Galicien
Tradutor: Marcos Lans
Data de instalación: $date
gl_ES"

it="## NON MODIFICARE QUESTO FILE ##

Nome del progetto: SystemClean
Version: 2.3
Autore: vagrale13
Pagina del progetto: <a href=http://goo.gl/7UXUs>http://goo.gl/7UXUs</a>
Lingua: Italien
Traduttore: Naf71
Data di installazione: $date
it_IT"

fr="## NE PAS EDITER CE FICHIER ##

Nom du projet: SystemClean
Version: 2.3
Auteur: vagrale13
Page du projet: <a href=http://goo.gl/7UXUs>http://goo.gl/7UXUs</a>
Langue: Français
Traducteur: Ismaël BALLO
Date d'installation: $date
fr_FR"

hr="## NEMOJTE UREĐIVATI OVU DATOTEKU ##

Ime projekta: SystemClean
Verzija: 2.3
Autor: vagrale13
Web stranica projekta: <a href=http://goo.gl/7UXUs>http://goo.gl/7UXUs</a>
Jezik: Hrvatski
Prevoditelj: Petar Kulić
Datum instalacije: $date
hr_HR"

pt="## NÃO EDITE ESSE ARQUIVO ##

Nome do projeto: SystemClean
Versão: 2.3
Autor: vagrale13
Página do Projeto: <a href=http://goo.gl/7UXUs>http://goo.gl/7UXUs</a>
Idioma: Português Brasileiro
Tradutor: C.Rodrigues
Data de Instalação: $date
pt_BR"

ru="## НЕ ИЗМЕНЯЙТЕ ЭТОТ ФАЙЛ ##

Имя проекта: SystemClean
Версия: 2.3
Автор: vagrale13
Страница проекта: <a href=http://goo.gl/7UXUs>http://goo.gl/7UXUs</a>
Язык: Русский
Переводчик: Jalkoby
Установка времени: $date
ru_RU"

ro="## Nu modificați acest fișier ##

Numele proiectului: SystemClean
Versiune: 2.3
Autor: vagrale13
Pagina web a proiectului: <a href=http://goo.gl/7UXUs>http://goo.gl/7UXUs</a>
Limba: Română
Traducător: Ithreexas
Data instalării: $date
ro_RO"

ja="## 編集禁止 ##

プロジェクト名: SystemClean
バージョン: 2.3
作者: vagrale13
プロジェクト・ページ: <a href=http://goo.gl/7UXUs>http://goo.gl/7UXUs</a>
言語: 日本語
翻訳者: starcycle
インストール日: $date
ja_JP"

nl="## Pas dit bestand niet aan ##

Project naam: SystemClean
Versie: 2.3
Uitgever: vagrale13
Project pagina: <a href=http://goo.gl/7UXUs>http://goo.gl/7UXUs</a>
Taal: Nederlands
Vertaler: Jonathan Moerman
Datum installatie: $date
nl_NL"

ch="## 请不要修改此文件 ##

程序名: SystemClean
版本: 2.3
作者: vagrale13
项目主页: <a href=http://goo.gl/7UXUs>http://goo.gl/7UXUs</a>
语言: 简体中文
译者: 长孙弘奕
安装日期: $date
zh_CN"

pl="## NIE EDYTUJ TEGO PLIKU ##

Nazwa projetu: SystemClean
Wersja: 2.3
Autor: vagrale13
Strona Projektu: <a href=http://goo.gl/7UXUs>http://goo.gl/7UXUs</a>
Język: Polski
Tłumacz: Janusz
Data Instalacji: $date
pl_PL"

de="## Diese Zeile nicht verändern ##

Name des Projektes: SystemClean
Version: 2.3
Autor: vagrale13
Seite des Projektes: <a href=http://goo.gl/7UXUs>http://goo.gl/7UXUs</a>
Sprache: Deutsch
Übersetzer: Peter van Evert
Installationsdatum: $date
de_DE"

#------------------------------------------------------------------------#


 #================#
#  Greek language  #
 #================#

if [ "$lang" = "el_GR" ]; then

if [ "$(whoami)" = "root" ]; then
 zenity --error --text="Δεν πρέπει να τρέξετε το script\nμε δικαιώματα <b>Υπερχρήστη</b>!\nΞανατρέξτε το script ως απλός χρήστης."
 exit 0
fi

zenity --text-info --title="-- Licence --" --width="560" --height="670" --window-icon="systemclean.png" --checkbox="Agree" --html --filename="./licence/info.html"
if [ $? -eq 1 ] ; then
        zenity --info \
          --text="Goodbye..."  --timeout=1
exit 1
fi

if [ "$file" = "" ]; then
mkdir /home/$user/.systemclean
fi

if [ "$results" = "exists" ]; then
mv /home/$user/.systemclean/results.txt /home/$user/.systemclean/results.html
fi

if [ "$results_old" = "exists" ]; then
mv /home/$user/.systemclean/results_old.txt /home/$user/.systemclean/results_old.html
fi

response=$(zenity  --list  --width="300"  --height="460" --window-icon="systemclean.png" --text="Επιλέξτε τη γλώσσα που θέλετε να εγκαταστήσετε το SystemClean"  --radiolist  --column " ? " --column "Γλώσσα" FALSE "Deutsch" FALSE "English" FALSE "Español" FALSE "Français" FALSE "Galego" FALSE "Hrvatski" FALSE "Italiano" FALSE "Nederlands" FALSE "Português_Brasileiro" FALSE "Română" TRUE "Ελληνικά" FALSE "Polski" FALSE "Русский" FALSE "日本語" FALSE "简体中文"   --separator=":")

if [ $? -eq 1 ] ; then
        zenity --error \
          --text="Η εγκατάσταση ακυρώθηκε."
exit 1
fi

[[ $response = *Português_Brasileiro* ]] && cp ./bin/br.bin /home/$user/.systemclean/SystemClean
[[ $response = *Português_Brasileiro* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Português_Brasileiro* ]] && echo "$pt" > /home/$user/.systemclean/config
[[ $response = *Hrvatski* ]] && cp ./bin/hr.bin /home/$user/.systemclean/SystemClean
[[ $response = *Hrvatski* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Hrvatski* ]] && echo "$hr" > /home/$user/.systemclean/config
[[ $response = *English* ]] && cp ./bin/en.bin /home/$user/.systemclean/SystemClean
[[ $response = *English* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *English* ]] && echo "$en" > /home/$user/.systemclean/config
[[ $response = *Español* ]] && cp ./bin/es.bin /home/$user/.systemclean/SystemClean
[[ $response = *Español* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Español* ]] && echo "$es" > /home/$user/.systemclean/config
[[ $response = *Français* ]] && cp ./bin/fr.bin /home/$user/.systemclean/SystemClean
[[ $response = *Français* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Français* ]] && echo "$fr" > /home/$user/.systemclean/config
[[ $response = *Galego* ]] && cp ./bin/gl.bin /home/$user/.systemclean/SystemClean
[[ $response = *Galego* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Galego* ]] && echo "$gl" > /home/$user/.systemclean/config
[[ $response = *Ελληνικά* ]] && cp ./bin/gr.bin /home/$user/.systemclean/SystemClean
[[ $response = *Ελληνικά* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Ελληνικά* ]] && echo "$el" > /home/$user/.systemclean/config
[[ $response = *Italiano* ]] && cp ./bin/it.bin /home/$user/.systemclean/SystemClean
[[ $response = *Italiano* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Italiano* ]] && echo "$it" > /home/$user/.systemclean/config
[[ $response = *Русский* ]] && cp ./bin/ru.bin /home/$user/.systemclean/SystemClean
[[ $response = *Русский* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Русский* ]] && echo "$ru" > /home/$user/.systemclean/config
[[ $response = *Română* ]] && cp ./bin/ro.bin /home/$user/.systemclean/SystemClean
[[ $response = *Română* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Română* ]] && echo "$ro" > /home/$user/.systemclean/config
[[ $response = *日本語* ]] && cp ./bin/ja.bin /home/$user/.systemclean/SystemClean
[[ $response = *日本語* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *日本語* ]] && echo "$ja" > /home/$user/.systemclean/config
[[ $response = *Nederlands* ]] && cp ./bin/nl.bin /home/$user/.systemclean/SystemClean
[[ $response = *Nederlands* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Nederlands* ]] && echo "$nl" > /home/$user/.systemclean/config
[[ $response = *简体中文* ]] && cp ./bin/ch.bin /home/$user/.systemclean/SystemClean
[[ $response = *简体中文* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *简体中文* ]] && echo "$ch" > /home/$user/.systemclean/config
[[ $response = *Polski* ]] && cp ./bin/pl.bin /home/$user/.systemclean/SystemClean
[[ $response = *Polski* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Polski* ]] && echo "$pl" > /home/$user/.systemclean/config
[[ $response = *Deutsch* ]] && cp ./bin/de.bin /home/$user/.systemclean/SystemClean
[[ $response = *Deutsch* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Deutsch* ]] && echo "$de" > /home/$user/.systemclean/config

zenity --info --text "Η εγκατάσταση ολοκληρώθηκε με επιτυχία!"
echo "SystemClean_v2.3" > /home/$user/.systemclean/update_version
echo "[Desktop Entry]
Version=2.3
Name=SystemClean
Icon=/home/$user/.systemclean/systemclean.png
Exec=bash -c '/home/$user/.systemclean/SystemClean'
Terminal=true
Type=Application
Categories=Utility;Application;" > /home/$user/.local/share/applications/systemclean.desktop
cp systemclean.png /home/$user/.systemclean
echo "<html><body bgcolor=black text=lime link=#F70D1A><code><pre>
 ##############################################################
#  ____            _                  ____ _                   #
# / ___| _   _ ___| |_ ___ _ __ ___  / ___| | ___  __ _ _ __   #
# \___ \| | | / __| __/ _ \ '_ ' _ \/ |   | |/ _ \/ _' | '_ \  #
#  ___) | |_| \__ \ ||  __/ | | | | | |___| |  __/ (_| | | | | #
# |____/ \__, |___/\__\___|_| |_| |_|\____|_|\___|\__,_|_| |_| #
#        |___/                                            v2.3 #
#                 <font color=green>GPL license Version 3 (GPLv3)</font>                #
 ##############################################################
<font color=green>                                                         </font>.--.<font color=green>
-- This script created by vagrale13 (vagrale@gmail.com) </font>|o_o |<font color=green>
-- to easy clean your system and home folder            </font>|:_/ |<font color=green>
-- from cache and unneeded files.                      </font>//   \ \<font color=green>
                                                      </font>(|     | )<font color=green>
-- Project page: <a href=http://goo.gl/7UXUs>http://goo.gl/7UXUs</a>                 </font>/'\_   _/'\<font color=green>
                                                     </font>\___)=(___/<font color=green>
-----------------------------" > /home/$user/.systemclean/info.html
exit 0
fi

 #========================================#
#  Spanish Language (by: Fernando Bernal)  #
 #========================================#

if [ "$lang" = "es_ES" ]; then

if [ "$(whoami)" = "root" ]; then
 zenity --error --text="¡No ejecute ésta instalación como <b>root</b>!\nPor favor ejecútala como usuario normal."
 exit 0
fi

zenity --text-info --title="-- Licence --" --width="560" --height="670" --window-icon="systemclean.png" --checkbox="Agree" --html --filename="./licence/info.html"
if [ $? -eq 1 ] ; then
        zenity --info \
          --text="Goodbye..."  --timeout=1
exit 1
fi

if [ "$file" = "" ]; then
mkdir /home/$user/.systemclean
fi

if [ "$results" = "exists" ]; then
mv /home/$user/.systemclean/results.txt /home/$user/.systemclean/results.html
fi

if [ "$results_old" = "exists" ]; then
mv /home/$user/.systemclean/results_old.txt /home/$user/.systemclean/results_old.html
fi

response=$(zenity  --list  --width="300"  --height="460" --window-icon="systemclean.png" --text="Elige el idioma con el que deseas instalar SystemClean"  --radiolist  --column " ? " --column "Idioma" FALSE "Deutsch" FALSE "English" TRUE "Español" FALSE "Français" FALSE "Galego" FALSE "Hrvatski" FALSE "Italiano" FALSE "Nederlands" FALSE "Português_Brasileiro" FALSE "Română" FALSE "Ελληνικά" FALSE "Polski" FALSE "Русский" FALSE "日本語" FALSE "简体中文"   --separator=":")

if [ $? -eq 1 ] ; then
        zenity --error \
          --text="Instalación cancelada."
exit 1
fi

[[ $response = *Português_Brasileiro* ]] && cp ./bin/br.bin /home/$user/.systemclean/SystemClean
[[ $response = *Português_Brasileiro* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Português_Brasileiro* ]] && echo "$pt" > /home/$user/.systemclean/config
[[ $response = *Hrvatski* ]] && cp ./bin/hr.bin /home/$user/.systemclean/SystemClean
[[ $response = *Hrvatski* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Hrvatski* ]] && echo "$hr" > /home/$user/.systemclean/config
[[ $response = *English* ]] && cp ./bin/en.bin /home/$user/.systemclean/SystemClean
[[ $response = *English* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *English* ]] && echo "$en" > /home/$user/.systemclean/config
[[ $response = *Español* ]] && cp ./bin/es.bin /home/$user/.systemclean/SystemClean
[[ $response = *Español* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Español* ]] && echo "$es" > /home/$user/.systemclean/config
[[ $response = *Français* ]] && cp ./bin/fr.bin /home/$user/.systemclean/SystemClean
[[ $response = *Français* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Français* ]] && echo "$fr" > /home/$user/.systemclean/config
[[ $response = *Galego* ]] && cp ./bin/gl.bin /home/$user/.systemclean/SystemClean
[[ $response = *Galego* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Galego* ]] && echo "$gl" > /home/$user/.systemclean/config
[[ $response = *Ελληνικά* ]] && cp ./bin/gr.bin /home/$user/.systemclean/SystemClean
[[ $response = *Ελληνικά* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Ελληνικά* ]] && echo "$el" > /home/$user/.systemclean/config
[[ $response = *Italiano* ]] && cp ./bin/it.bin /home/$user/.systemclean/SystemClean
[[ $response = *Italiano* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Italiano* ]] && echo "$it" > /home/$user/.systemclean/config
[[ $response = *Русский* ]] && cp ./bin/ru.bin /home/$user/.systemclean/SystemClean
[[ $response = *Русский* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Русский* ]] && echo "$ru" > /home/$user/.systemclean/config
[[ $response = *Română* ]] && cp ./bin/ro.bin /home/$user/.systemclean/SystemClean
[[ $response = *Română* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Română* ]] && echo "$ro" > /home/$user/.systemclean/config
[[ $response = *日本語* ]] && cp ./bin/ja.bin /home/$user/.systemclean/SystemClean
[[ $response = *日本語* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *日本語* ]] && echo "$ja" > /home/$user/.systemclean/config
[[ $response = *Nederlands* ]] && cp ./bin/nl.bin /home/$user/.systemclean/SystemClean
[[ $response = *Nederlands* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Nederlands* ]] && echo "$nl" > /home/$user/.systemclean/config
[[ $response = *简体中文* ]] && cp ./bin/ch.bin /home/$user/.systemclean/SystemClean
[[ $response = *简体中文* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *简体中文* ]] && echo "$ch" > /home/$user/.systemclean/config
[[ $response = *Polski* ]] && cp ./bin/pl.bin /home/$user/.systemclean/SystemClean
[[ $response = *Polski* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Polski* ]] && echo "$pl" > /home/$user/.systemclean/config
[[ $response = *Deutsch* ]] && cp ./bin/de.bin /home/$user/.systemclean/SystemClean
[[ $response = *Deutsch* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Deutsch* ]] && echo "$de" > /home/$user/.systemclean/config

zenity --info --text "¡La instalación se ha completado correctamente!"
echo "SystemClean_v2.3" > /home/$user/.systemclean/update_version
echo "[Desktop Entry]
Version=2.3
Name=SystemClean
Icon=/home/$user/.systemclean/systemclean.png
Exec=bash -c '/home/$user/.systemclean/SystemClean'
Terminal=true
Type=Application
Categories=Utility;Application;" > /home/$user/.local/share/applications/systemclean.desktop
cp systemclean.png /home/$user/.systemclean
echo "<html><body bgcolor=black text=lime link=#F70D1A><code><pre>
 ##############################################################
#  ____            _                  ____ _                   #
# / ___| _   _ ___| |_ ___ _ __ ___  / ___| | ___  __ _ _ __   #
# \___ \| | | / __| __/ _ \ '_ ' _ \/ |   | |/ _ \/ _' | '_ \  #
#  ___) | |_| \__ \ ||  __/ | | | | | |___| |  __/ (_| | | | | #
# |____/ \__, |___/\__\___|_| |_| |_|\____|_|\___|\__,_|_| |_| #
#        |___/                                            v2.3 #
#                 <font color=green>GPL license Version 3 (GPLv3)</font>                #
 ##############################################################
<font color=green>                                                         </font>.--.<font color=green>
-- This script created by vagrale13 (vagrale@gmail.com) </font>|o_o |<font color=green>
-- to easy clean your system and home folder            </font>|:_/ |<font color=green>
-- from cache and unneeded files.                      </font>//   \ \<font color=green>
-- Special thanks for Translated By: Fernando Bernal  </font>(|     | )<font color=green>
-- Project page: <a href=http://goo.gl/7UXUs>http://goo.gl/7UXUs</a>                 </font>/'\_   _/'\<font color=green>
                                                     </font>\___)=(___/<font color=green>
-----------------------------" > /home/$user/.systemclean/info.html
exit 0
fi

 #=====================================#
#  Galician Language (by: Marcos Lans)  #
 #=====================================#

if [ "$lang" = "gl_ES" ]; then

if [ "$(whoami)" = "root" ]; then
 zenity --error --text="Non execute esta configuración como <b>root</b>!\nFágao como usuario 'normal'."
 exit 0
fi

zenity --text-info --title="-- Licence --" --width="560" --height="670" --window-icon="systemclean.png" --checkbox="Agree" --html --filename="./licence/info.html"
if [ $? -eq 1 ] ; then
        zenity --info \
          --text="Goodbye..."  --timeout=1
exit 1
fi

if [ "$file" = "" ]; then
mkdir /home/$user/.systemclean
fi

if [ "$results" = "exists" ]; then
mv /home/$user/.systemclean/results.txt /home/$user/.systemclean/results.html
fi

if [ "$results_old" = "exists" ]; then
mv /home/$user/.systemclean/results_old.txt /home/$user/.systemclean/results_old.html
fi

response=$(zenity  --list  --width="300"  --height="460" --window-icon="systemclean.png" --text="Seleccione o idioma en que quere instalar o SystemClean"  --radiolist  --column " ? " --column "Idioma" FALSE "Deutsch" FALSE "English" FALSE "Español" FALSE "Français" TRUE "Galego" FALSE "Hrvatski" FALSE "Italiano" FALSE "Nederlands" FALSE "Português_Brasileiro" FALSE "Română" FALSE "Ελληνικά" FALSE "Polski" FALSE "Русский" FALSE "日本語" FALSE "简体中文"   --separator=":")

if [ $? -eq 1 ] ; then
        zenity --error \
          --text="Cancelouse a instalación."
exit 1
fi

[[ $response = *Português_Brasileiro* ]] && cp ./bin/br.bin /home/$user/.systemclean/SystemClean
[[ $response = *Português_Brasileiro* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Português_Brasileiro* ]] && echo "$pt" > /home/$user/.systemclean/config
[[ $response = *Hrvatski* ]] && cp ./bin/hr.bin /home/$user/.systemclean/SystemClean
[[ $response = *Hrvatski* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Hrvatski* ]] && echo "$hr" > /home/$user/.systemclean/config
[[ $response = *English* ]] && cp ./bin/en.bin /home/$user/.systemclean/SystemClean
[[ $response = *English* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *English* ]] && echo "$en" > /home/$user/.systemclean/config
[[ $response = *Español* ]] && cp ./bin/es.bin /home/$user/.systemclean/SystemClean
[[ $response = *Español* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Español* ]] && echo "$es" > /home/$user/.systemclean/config
[[ $response = *Français* ]] && cp ./bin/fr.bin /home/$user/.systemclean/SystemClean
[[ $response = *Français* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Français* ]] && echo "$fr" > /home/$user/.systemclean/config
[[ $response = *Galego* ]] && cp ./bin/gl.bin /home/$user/.systemclean/SystemClean
[[ $response = *Galego* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Galego* ]] && echo "$gl" > /home/$user/.systemclean/config
[[ $response = *Ελληνικά* ]] && cp ./bin/gr.bin /home/$user/.systemclean/SystemClean
[[ $response = *Ελληνικά* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Ελληνικά* ]] && echo "$el" > /home/$user/.systemclean/config
[[ $response = *Italiano* ]] && cp ./bin/it.bin /home/$user/.systemclean/SystemClean
[[ $response = *Italiano* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Italiano* ]] && echo "$it" > /home/$user/.systemclean/config
[[ $response = *Русский* ]] && cp ./bin/ru.bin /home/$user/.systemclean/SystemClean
[[ $response = *Русский* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Русский* ]] && echo "$ru" > /home/$user/.systemclean/config
[[ $response = *Română* ]] && cp ./bin/ro.bin /home/$user/.systemclean/SystemClean
[[ $response = *Română* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Română* ]] && echo "$ro" > /home/$user/.systemclean/config
[[ $response = *日本語* ]] && cp ./bin/ja.bin /home/$user/.systemclean/SystemClean
[[ $response = *日本語* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *日本語* ]] && echo "$ja" > /home/$user/.systemclean/config
[[ $response = *Nederlands* ]] && cp ./bin/nl.bin /home/$user/.systemclean/SystemClean
[[ $response = *Nederlands* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Nederlands* ]] && echo "$nl" > /home/$user/.systemclean/config
[[ $response = *简体中文* ]] && cp ./bin/ch.bin /home/$user/.systemclean/SystemClean
[[ $response = *简体中文* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *简体中文* ]] && echo "$ch" > /home/$user/.systemclean/config
[[ $response = *Polski* ]] && cp ./bin/pl.bin /home/$user/.systemclean/SystemClean
[[ $response = *Polski* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Polski* ]] && echo "$pl" > /home/$user/.systemclean/config
[[ $response = *Deutsch* ]] && cp ./bin/de.bin /home/$user/.systemclean/SystemClean
[[ $response = *Deutsch* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Deutsch* ]] && echo "$de" > /home/$user/.systemclean/config

zenity --info --text "Completouse a instalación correctamente."
echo "SystemClean_v2.3" > /home/$user/.systemclean/update_version
echo "[Desktop Entry]
Version=2.3
Name=SystemClean
Icon=/home/$user/.systemclean/systemclean.png
Exec=bash -c '/home/$user/.systemclean/SystemClean'
Terminal=true
Type=Application
Categories=Utility;Application;" > /home/$user/.local/share/applications/systemclean.desktop
cp systemclean.png /home/$user/.systemclean
echo "<html><body bgcolor=black text=lime link=#F70D1A><code><pre>
 ##############################################################
#  ____            _                  ____ _                   #
# / ___| _   _ ___| |_ ___ _ __ ___  / ___| | ___  __ _ _ __   #
# \___ \| | | / __| __/ _ \ '_ ' _ \/ |   | |/ _ \/ _' | '_ \  #
#  ___) | |_| \__ \ ||  __/ | | | | | |___| |  __/ (_| | | | | #
# |____/ \__, |___/\__\___|_| |_| |_|\____|_|\___|\__,_|_| |_| #
#        |___/                                            v2.3 #
#                 <font color=green>GPL license Version 3 (GPLv3)</font>                #
 ##############################################################
<font color=green>                                                         </font>.--.<font color=green>
-- This script created by vagrale13 (vagrale@gmail.com) </font>|o_o |<font color=green>
-- to easy clean your system and home folder            </font>|:_/ |<font color=green>
-- from cache and unneeded files.                      </font>//   \ \<font color=green>
-- Special thanks for Translated By: Marcos Lans      </font>(|     | )<font color=green>
-- Project page: <a href=http://goo.gl/7UXUs>http://goo.gl/7UXUs</a>                 </font>/'\_   _/'\<font color=green>
                                                     </font>\___)=(___/<font color=green>
-----------------------------" > /home/$user/.systemclean/info.html
exit 0
fi


 #==============================#
#  Italian Language (by: Naf71)  #
 #==============================#

if [ "$lang" = "it_IT" ]; then

if [ "$(whoami)" = "root" ]; then
 zenity --error --text="Non eseguire questo setup come <b>root</b>!\nSi prega di procedere come utente 'normale'."
 exit 0
fi

zenity --text-info --title="-- Licence --" --width="560" --height="670" --window-icon="systemclean.png" --checkbox="Agree" --html --filename="./licence/info.html"
if [ $? -eq 1 ] ; then
        zenity --info \
          --text="Goodbye..."  --timeout=1
exit 1
fi

if [ "$file" = "" ]; then
mkdir /home/$user/.systemclean
fi

if [ "$results" = "exists" ]; then
mv /home/$user/.systemclean/results.txt /home/$user/.systemclean/results.html
fi

if [ "$results_old" = "exists" ]; then
mv /home/$user/.systemclean/results_old.txt /home/$user/.systemclean/results_old.html
fi

response=$(zenity  --list  --width="300"  --height="460" --window-icon="systemclean.png" --text="Scegliere la lingua che si desidera installare"  --radiolist  --column " ? " --column "Lingua" FALSE "Deutsch" FALSE "English" FALSE "Español" FALSE "Français" FALSE "Galego" FALSE "Hrvatski" TRUE "Italiano" FALSE "Nederlands" FALSE "Português_Brasileiro" FALSE "Română" FALSE "Ελληνικά" FALSE "Polski" FALSE "Русский" FALSE "日本語" FALSE "简体中文"   --separator=":")

if [ $? -eq 1 ] ; then
        zenity --error \
          --text="Installazione annullata."
exit 1
fi

[[ $response = *Português_Brasileiro* ]] && cp ./bin/br.bin /home/$user/.systemclean/SystemClean
[[ $response = *Português_Brasileiro* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Português_Brasileiro* ]] && echo "$pt" > /home/$user/.systemclean/config
[[ $response = *Hrvatski* ]] && cp ./bin/hr.bin /home/$user/.systemclean/SystemClean
[[ $response = *Hrvatski* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Hrvatski* ]] && echo "$hr" > /home/$user/.systemclean/config
[[ $response = *English* ]] && cp ./bin/en.bin /home/$user/.systemclean/SystemClean
[[ $response = *English* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *English* ]] && echo "$en" > /home/$user/.systemclean/config
[[ $response = *Español* ]] && cp ./bin/es.bin /home/$user/.systemclean/SystemClean
[[ $response = *Español* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Español* ]] && echo "$es" > /home/$user/.systemclean/config
[[ $response = *Français* ]] && cp ./bin/fr.bin /home/$user/.systemclean/SystemClean
[[ $response = *Français* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Français* ]] && echo "$fr" > /home/$user/.systemclean/config
[[ $response = *Galego* ]] && cp ./bin/gl.bin /home/$user/.systemclean/SystemClean
[[ $response = *Galego* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Galego* ]] && echo "$gl" > /home/$user/.systemclean/config
[[ $response = *Ελληνικά* ]] && cp ./bin/gr.bin /home/$user/.systemclean/SystemClean
[[ $response = *Ελληνικά* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Ελληνικά* ]] && echo "$el" > /home/$user/.systemclean/config
[[ $response = *Italiano* ]] && cp ./bin/it.bin /home/$user/.systemclean/SystemClean
[[ $response = *Italiano* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Italiano* ]] && echo "$it" > /home/$user/.systemclean/config
[[ $response = *Русский* ]] && cp ./bin/ru.bin /home/$user/.systemclean/SystemClean
[[ $response = *Русский* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Русский* ]] && echo "$ru" > /home/$user/.systemclean/config
[[ $response = *Română* ]] && cp ./bin/ro.bin /home/$user/.systemclean/SystemClean
[[ $response = *Română* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Română* ]] && echo "$ro" > /home/$user/.systemclean/config
[[ $response = *日本語* ]] && cp ./bin/ja.bin /home/$user/.systemclean/SystemClean
[[ $response = *日本語* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *日本語* ]] && echo "$ja" > /home/$user/.systemclean/config
[[ $response = *Nederlands* ]] && cp ./bin/nl.bin /home/$user/.systemclean/SystemClean
[[ $response = *Nederlands* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Nederlands* ]] && echo "$nl" > /home/$user/.systemclean/config
[[ $response = *简体中文* ]] && cp ./bin/ch.bin /home/$user/.systemclean/SystemClean
[[ $response = *简体中文* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *简体中文* ]] && echo "$ch" > /home/$user/.systemclean/config
[[ $response = *Polski* ]] && cp ./bin/pl.bin /home/$user/.systemclean/SystemClean
[[ $response = *Polski* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Polski* ]] && echo "$pl" > /home/$user/.systemclean/config
[[ $response = *Deutsch* ]] && cp ./bin/de.bin /home/$user/.systemclean/SystemClean
[[ $response = *Deutsch* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Deutsch* ]] && echo "$de" > /home/$user/.systemclean/config

zenity --info --text "Installazione completata con successo!"
echo "SystemClean_v2.3" > /home/$user/.systemclean/update_version
echo "[Desktop Entry]
Version=2.3
Name=SystemClean
Icon=/home/$user/.systemclean/systemclean.png
Exec=bash -c '/home/$user/.systemclean/SystemClean'
Terminal=true
Type=Application
Categories=Utility;Application;" > /home/$user/.local/share/applications/systemclean.desktop
cp systemclean.png /home/$user/.systemclean
echo "<html><body bgcolor=black text=lime link=#F70D1A><code><pre>
 ##############################################################
#  ____            _                  ____ _                   #
# / ___| _   _ ___| |_ ___ _ __ ___  / ___| | ___  __ _ _ __   #
# \___ \| | | / __| __/ _ \ '_ ' _ \/ |   | |/ _ \/ _' | '_ \  #
#  ___) | |_| \__ \ ||  __/ | | | | | |___| |  __/ (_| | | | | #
# |____/ \__, |___/\__\___|_| |_| |_|\____|_|\___|\__,_|_| |_| #
#        |___/                                            v2.3 #
#                 <font color=green>GPL license Version 3 (GPLv3)</font>                #
 ##############################################################
<font color=green>                                                         </font>.--.<font color=green>
-- This script created by vagrale13 (vagrale@gmail.com) </font>|o_o |<font color=green>
-- to easy clean your system and home folder            </font>|:_/ |<font color=green>
-- from cache and unneeded files.                      </font>//   \ \<font color=green>
-- Special thanks for Translated By: Naf71            </font>(|     | )<font color=green>
-- Project page: <a href=http://goo.gl/7UXUs>http://goo.gl/7UXUs</a>                 </font>/'\_   _/'\<font color=green>
                                                     </font>\___)=(___/<font color=green>
-----------------------------" > /home/$user/.systemclean/info.html
exit 0
fi

 #====================================#
#  French Language (by: Ismaël BALLO)  #
 #====================================#

if [ "$lang" = "fr_FR" ]; then

if [ "$(whoami)" = "root" ]; then
 zenity --error --text="Vous ne devriez pas lancer cette installation en tant que <b>root</b>!\nSVP, lancez-la en tant qu'utilisateur 'normal'."
 exit 0
fi

zenity --text-info --title="-- Licence --" --width="560" --height="670" --window-icon="systemclean.png" --checkbox="Agree" --html --filename="./licence/info.html"
if [ $? -eq 1 ] ; then
        zenity --info \
          --text="Goodbye..."  --timeout=1
exit 1
fi

if [ "$file" = "" ]; then
mkdir /home/$user/.systemclean
fi

if [ "$results" = "exists" ]; then
mv /home/$user/.systemclean/results.txt /home/$user/.systemclean/results.html
fi

if [ "$results_old" = "exists" ]; then
mv /home/$user/.systemclean/results_old.txt /home/$user/.systemclean/results_old.html
fi

response=$(zenity  --list  --width="300"  --height="460" --window-icon="systemclean.png" --text="Choisissez la langue d'installation de SystemClean"  --radiolist  --column " ? " --column "Langue" FALSE "Deutsch" FALSE "English" FALSE "Español" TRUE "Français" FALSE "Galego" FALSE "Hrvatski" FALSE "Italiano" FALSE "Nederlands" FALSE "Português_Brasileiro" FALSE "Română" FALSE "Ελληνικά" FALSE "Polski" FALSE "Русский" FALSE "日本語" FALSE "简体中文"   --separator=":")

if [ $? -eq 1 ] ; then
        zenity --error \
          --text="Installation annulée."
exit 1
fi

[[ $response = *Português_Brasileiro* ]] && cp ./bin/br.bin /home/$user/.systemclean/SystemClean
[[ $response = *Português_Brasileiro* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Português_Brasileiro* ]] && echo "$pt" > /home/$user/.systemclean/config
[[ $response = *Hrvatski* ]] && cp ./bin/hr.bin /home/$user/.systemclean/SystemClean
[[ $response = *Hrvatski* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Hrvatski* ]] && echo "$hr" > /home/$user/.systemclean/config
[[ $response = *English* ]] && cp ./bin/en.bin /home/$user/.systemclean/SystemClean
[[ $response = *English* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *English* ]] && echo "$en" > /home/$user/.systemclean/config
[[ $response = *Español* ]] && cp ./bin/es.bin /home/$user/.systemclean/SystemClean
[[ $response = *Español* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Español* ]] && echo "$es" > /home/$user/.systemclean/config
[[ $response = *Français* ]] && cp ./bin/fr.bin /home/$user/.systemclean/SystemClean
[[ $response = *Français* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Français* ]] && echo "$fr" > /home/$user/.systemclean/config
[[ $response = *Galego* ]] && cp ./bin/gl.bin /home/$user/.systemclean/SystemClean
[[ $response = *Galego* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Galego* ]] && echo "$gl" > /home/$user/.systemclean/config
[[ $response = *Ελληνικά* ]] && cp ./bin/gr.bin /home/$user/.systemclean/SystemClean
[[ $response = *Ελληνικά* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Ελληνικά* ]] && echo "$el" > /home/$user/.systemclean/config
[[ $response = *Italiano* ]] && cp ./bin/it.bin /home/$user/.systemclean/SystemClean
[[ $response = *Italiano* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Italiano* ]] && echo "$it" > /home/$user/.systemclean/config
[[ $response = *Русский* ]] && cp ./bin/ru.bin /home/$user/.systemclean/SystemClean
[[ $response = *Русский* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Русский* ]] && echo "$ru" > /home/$user/.systemclean/config
[[ $response = *Română* ]] && cp ./bin/ro.bin /home/$user/.systemclean/SystemClean
[[ $response = *Română* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Română* ]] && echo "$ro" > /home/$user/.systemclean/config
[[ $response = *日本語* ]] && cp ./bin/ja.bin /home/$user/.systemclean/SystemClean
[[ $response = *日本語* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *日本語* ]] && echo "$ja" > /home/$user/.systemclean/config
[[ $response = *Nederlands* ]] && cp ./bin/nl.bin /home/$user/.systemclean/SystemClean
[[ $response = *Nederlands* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Nederlands* ]] && echo "$nl" > /home/$user/.systemclean/config
[[ $response = *简体中文* ]] && cp ./bin/ch.bin /home/$user/.systemclean/SystemClean
[[ $response = *简体中文* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *简体中文* ]] && echo "$ch" > /home/$user/.systemclean/config
[[ $response = *Polski* ]] && cp ./bin/pl.bin /home/$user/.systemclean/SystemClean
[[ $response = *Polski* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Polski* ]] && echo "$pl" > /home/$user/.systemclean/config
[[ $response = *Deutsch* ]] && cp ./bin/de.bin /home/$user/.systemclean/SystemClean
[[ $response = *Deutsch* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Deutsch* ]] && echo "$de" > /home/$user/.systemclean/config

zenity --info --text "Installation complète réussie!"
echo "SystemClean_v2.3" > /home/$user/.systemclean/update_version
echo "[Desktop Entry]
Version=2.3
Name=SystemClean
Icon=/home/$user/.systemclean/systemclean.png
Exec=bash -c '/home/$user/.systemclean/SystemClean'
Terminal=true
Type=Application
Categories=Utility;Application;" > /home/$user/.local/share/applications/systemclean.desktop
cp systemclean.png /home/$user/.systemclean
echo "<html><body bgcolor=black text=lime link=#F70D1A><code><pre>
 ##############################################################
#  ____            _                  ____ _                   #
# / ___| _   _ ___| |_ ___ _ __ ___  / ___| | ___  __ _ _ __   #
# \___ \| | | / __| __/ _ \ '_ ' _ \/ |   | |/ _ \/ _' | '_ \  #
#  ___) | |_| \__ \ ||  __/ | | | | | |___| |  __/ (_| | | | | #
# |____/ \__, |___/\__\___|_| |_| |_|\____|_|\___|\__,_|_| |_| #
#        |___/                                            v2.3 #
#                 <font color=green>GPL license Version 3 (GPLv3)</font>                #
 ##############################################################
<font color=green>                                                         </font>.--.<font color=green>
-- This script created by vagrale13 (vagrale@gmail.com) </font>|o_o |<font color=green>
-- to easy clean your system and home folder            </font>|:_/ |<font color=green>
-- from cache and unneeded files.                      </font>//   \ \<font color=green>
-- Special thanks for Translated By: Ismaël BALLO     </font>(|     | )<font color=green>
-- Project page: <a href=http://goo.gl/7UXUs>http://goo.gl/7UXUs</a>                 </font>/'\_   _/'\<font color=green>
