 #===================================#
#  Romanian language (by: Ithreexas)  #
 #===================================#

if [ "$lang" = "ro_RO" ]; then

if [ "$(whoami)" = "root" ]; then
 zenity --error --text="Nu trebuie sa rulați acest\ninstalator ca <b>root</b>!\nVă rog să-l rulați ca utilizator 'normal'."
 exit 0
fi

zenity --text-info --title="-- Licence --" --width="560" --height="670" --window-icon="systemclean.png" --checkbox="Agree" --html --filename="./licence/info.html"
if [ $? -eq 1 ] ; then
        zenity --info \
          --text="Goodbye..."  --timeout=1
exit 1
fi

if [ "$file" = "" ]; then
mkdir /home/$user/.systemclean
fi

if [ "$results" = "exists" ]; then
mv /home/$user/.systemclean/results.txt /home/$user/.systemclean/results.html
fi

if [ "$results_old" = "exists" ]; then
mv /home/$user/.systemclean/results_old.txt /home/$user/.systemclean/results_old.html
fi

response=$(zenity  --list  --width="300"  --height="460" --window-icon="systemclean.png" --text="Alegeți limba în care doriți sa instalați SystemClean"  --radiolist  --column " ? " --column "Limba" FALSE "Deutsch" FALSE "English" FALSE "Español" FALSE "Français" FALSE "Galego" FALSE "Hrvatski" FALSE "Italiano" FALSE "Nederlands" FALSE "Português_Brasileiro" TRUE "Română" FALSE "Ελληνικά" FALSE "Polski" FALSE "Русский" FALSE "日本語" FALSE "简体中文"   --separator=":")

if [ $? -eq 1 ] ; then
        zenity --error \
          --text="Instalare anulată."
exit 1
fi

[[ $response = *Português_Brasileiro* ]] && cp ./bin/br.bin /home/$user/.systemclean/SystemClean
[[ $response = *Português_Brasileiro* ]] && chmod a+x /home/$user/.systemclean/SystemClean
[[ $response = *Português_Brasileiro* ]] && echo "$pt" > /home/$user/.systemclean/config
